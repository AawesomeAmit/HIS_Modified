<resources xmlns:tools="http://schemas.android.com/tools">
    <!--Theme.AppCompat.Light.NoActionBar-->
    <style name="AppTheme" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="AppTheme.CustomTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/gryText</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gradient_spinner</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:popupBackground">#DFFFFFFF</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="Theme.MaterialComponents.Light">
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/gryText</item>
    </style>

    <style name="ThemeOverlay.MyTheme" parent="Theme.MaterialComponents.Light">
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/blue_text</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorAccent">@color/blue_text</item>
        <!--<item name="colorPrimaryDark">@color/blue_text</item>-->
    </style>

    <style name="AppTheme.myDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/gryText</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="realplay_info">
        <item name="android:textColor">#555</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center|right</item>
    </style>
    <style name="realplay_data_big">
        <item name="android:gravity">center</item>
        <item name="android:textSize">42dp</item>
    </style>

    <style name="realplay_data_small">
        <item name="android:gravity">center</item>
        <item name="android:textSize">40dp</item>
    </style>
</resources>
