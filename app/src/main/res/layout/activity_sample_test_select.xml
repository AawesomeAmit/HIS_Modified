<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SampleTestSelect">

    <TextView
        android:id="@+id/textView31"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/greyLine"
        android:gravity="center"
        android:padding="@dimen/_5sdp"
        android:text="@string/sample_tests"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_15ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTests"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/txtBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView31"
        tools:listitem="@layout/inner_sample_test" />

    <TextView
        android:id="@+id/txtBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="@dimen/_20sdp"
        android:background="@drawable/btn_add_bg"
        android:drawableStart="@drawable/ic_arrow_back_black_24dp"
        android:drawablePadding="@dimen/_3sdp"
        android:gravity="center"
        android:paddingStart="@dimen/_7sdp"
        android:paddingTop="@dimen/_4sdp"
        android:paddingEnd="@dimen/_7sdp"
        android:paddingBottom="@dimen/_4sdp"
        android:text="@string/back"
        android:textColor="@color/blue_text"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/txtNext"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="@dimen/_20sdp"
        android:background="@drawable/btn_add_bg"
        android:drawableEnd="@drawable/ic_baseline_arrow_forward_24"
        android:drawablePadding="@dimen/_3sdp"
        android:gravity="center"
        android:paddingStart="@dimen/_7sdp"
        android:paddingTop="@dimen/_4sdp"
        android:paddingEnd="@dimen/_7sdp"
        android:paddingBottom="@dimen/_4sdp"
        android:text="@string/next"
        android:textColor="@color/blue_text"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/txtBack" />
</androidx.constraintlayout.widget.ConstraintLayout>