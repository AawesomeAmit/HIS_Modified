<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.InputMeal">
    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:background="#E6E6E6"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:textColor="@color/blue_text"
        android:id="@+id/txtSubDept"
        android:paddingStart="@dimen/_5sdp"
        android:paddingEnd="@dimen/_5sdp"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:text="@string/meal_intake"
        android:textSize="@dimen/_15sdp"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:layout_height="@dimen/_30sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvViewdoc"
            android:backgroundTint="@color/orange"
            android:layout_marginEnd="@dimen/_5sdp"
            android:background="@drawable/ic_baseline_remove_red_eye_24"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/btnImg"
            android:textColor="@color/blue_text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnImg"
            android:textSize="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_baseline_image"
            android:layout_toLeftOf="@+id/txtVoice"
            android:textColor="@color/blue_text"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtVoice"
            android:textSize="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_baseline_mic"
            android:layout_toLeftOf="@+id/llDateTime"
            android:textColor="@color/blue_text"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:id="@+id/llDateTime"
            android:layout_alignParentEnd="true">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:id="@+id/txtDate"
                android:paddingStart="@dimen/_2sdp"
                android:paddingEnd="@dimen/_2sdp"
                android:gravity="center_vertical"
                android:background="@color/blue_heading"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                android:layout_height="@dimen/_30sdp"/>
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:id="@+id/txtTime"
                android:background="@color/blue_heading"
                android:layout_marginStart="@dimen/_2sdp"
                android:paddingStart="@dimen/_2sdp"
                android:paddingEnd="@dimen/_2sdp"
                android:gravity="center_vertical"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                android:layout_height="@dimen/_30sdp"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:layout_marginStart="@dimen/_2sdp"
        android:layout_marginEnd="@dimen/_2sdp"
        android:orientation="horizontal">
        <AutoCompleteTextView
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:textColor="@color/black"
            android:layout_weight="5"
            android:paddingStart="@dimen/_2sdp"
            android:paddingEnd="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_1sdp"
            android:hint="@string/meal_name"
            android:singleLine="true"
            android:drawableStart="@drawable/ic_med"
            android:background="@drawable/edt_bor"
            android:drawablePadding="@dimen/_2sdp"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/_13sdp"
            android:id="@+id/edtMeal"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="2"
            android:background="@drawable/edt_bor"
            android:paddingStart="@dimen/_2sdp"
            android:inputType="number|numberDecimal"
            android:hint="@string/unit"
            android:layout_marginStart="@dimen/_1sdp"
            android:layout_marginEnd="@dimen/_1sdp"
            android:paddingEnd="@dimen/_2sdp"
            android:textColor="@color/black"
            android:drawableStart="@drawable/ic_med"
            android:drawablePadding="@dimen/_2sdp"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/_13sdp"
            android:id="@+id/edtQty"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_marginEnd="@dimen/_1sdp"
            android:background="@drawable/edt_bor"
            android:layout_height="@dimen/_30sdp">
            <androidx.appcompat.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:paddingStart="@dimen/_2sdp"
                android:paddingEnd="@dimen/_2sdp"
                android:drawablePadding="@dimen/_2sdp"
                android:drawableStart="@drawable/ic_frequency"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/_13sdp"
                android:id="@+id/txtUnit"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/_5sdp"
        android:gravity="end">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:paddingTop="@dimen/_5sdp"
            android:textSize="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:textColor="@color/white"
            android:layout_gravity="end"
            android:gravity="center"
            android:background="@drawable/btn_medication"
            android:id="@+id/btnSave" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMeal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_2sdp"
        android:background="#F8F8F8"
        tools:listitem="@layout/inner_display_input_fluid" />
</LinearLayout>