<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#E6E6E6"
    android:weightSum="17"
    android:orientation="vertical"
    tools:context=".Activity.PreDashboard">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1.5"
        android:gravity="center"
        android:background="@color/white"
        android:layout_height="0dp">
        <ImageView
            android:id="@+id/imgNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/view_notification"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/_5sdp"
            android:background="@drawable/ic_notifications" />
        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foregroundGravity="left"
            android:layout_marginStart="@dimen/_minus12sdp"
            android:padding="@dimen/_2sdp"
            android:paddingStart="@dimen/_4sdp"
            android:paddingEnd="@dimen/_4sdp"
            style="@style/Widget.Design.FloatingActionButton"
            android:textSize="@dimen/_10sdp"
            android:gravity="start"
            android:layout_toEndOf="@id/imgNotification"
            android:textColor="#ffffff" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_toStartOf="@id/txtScan"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:foregroundGravity="center"
            android:drawablePadding="@dimen/_2sdp"
            android:background="@drawable/ic_bluetooth_oxi"
            android:textColor="@color/black"
            android:id="@+id/btnOxi"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_toStartOf="@id/ll"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:foregroundGravity="center"
            android:drawablePadding="@dimen/_2sdp"
            android:drawableStart="@drawable/ic_qr_scanner"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/black"
            android:text="Scan"
            android:id="@+id/txtScan"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end|center_vertical"
            android:layout_toStartOf="@id/img"
            android:foregroundGravity="right"
            android:id="@+id/ll"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#10207A"
                android:id="@+id/txtDrName"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textStyle="bold"
                android:visibility="gone"

                android:id="@+id/txtDept"
                android:textColor="#AC4444"
                android:textSize="@dimen/_10sdp"/>
        </LinearLayout>
        <TextView
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_32sdp"
            android:id="@+id/img"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:gravity="center"
            android:background="@drawable/user"
            android:textSize="@dimen/_10sdp"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/rvGrid"
        android:layout_weight="9.5"
        tools:listitem="@layout/card_layout_head"
        android:columnCount="3"
        android:layout_height="0dp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="@dimen/_2sdp"
        android:paddingBottom="@dimen/_2sdp"
        android:contentDescription="@string/logo"
        app:srcCompat="@drawable/dash_logo"
        android:layout_weight="6"/>
</LinearLayout>