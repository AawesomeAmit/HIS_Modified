<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    android:weightSum="30"
    android:orientation="vertical"
    tools:context="com.his.android.Fragment.Questionnaire">
    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:background="#E6E6E6"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:textColor="@color/blue_text"
            android:id="@+id/txtSubDept"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:text="@string/questionnaire"
            android:textSize="@dimen/_15sdp"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            android:layout_height="@dimen/_30sdp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_alignParentEnd="true">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:id="@+id/txtDate"
                android:paddingStart="@dimen/_2sdp"
                android:paddingEnd="@dimen/_2sdp"
                android:gravity="center_vertical"
                android:background="@color/blue_heading"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                android:layout_height="@dimen/_30sdp"/>
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:id="@+id/txtTime"
                android:background="@color/blue_heading"
                android:layout_marginStart="@dimen/_2sdp"
                android:paddingStart="@dimen/_2sdp"
                android:paddingEnd="@dimen/_2sdp"
                android:gravity="center_vertical"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                android:layout_height="@dimen/_30sdp"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/_1sdp"
        android:layout_marginEnd="@dimen/_1sdp"
        android:background="@drawable/edt_bor"
        android:layout_height="@dimen/_30sdp">
        <androidx.appcompat.widget.AppCompatSpinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:paddingStart="@dimen/_2sdp"
            android:paddingEnd="@dimen/_2sdp"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/_13sdp"
            android:id="@+id/spnSets"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_weight="14"
        android:id="@+id/svQues"
        android:scrollbars="none"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_2sdp"
            android:background="@color/gryText"
            android:layout_marginLeft="@dimen/_2sdp"
            android:id="@+id/rvQuestionnaire"
            android:orientation="vertical"/>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/_5sdp"
        android:gravity="end"
        android:layout_weight="2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:paddingTop="@dimen/_5sdp"
            android:textSize="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:textColor="@color/white"
            android:layout_gravity="end"
            android:gravity="center"
            android:background="@drawable/btn_medication"
            android:id="@+id/btnSave" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:id="@+id/label"
        android:visibility="gone"
        android:layout_marginTop="@dimen/_minus2sdp"
        android:textColor="@color/blue_text"
        android:paddingStart="@dimen/_5sdp"
        android:paddingEnd="@dimen/_5sdp"
        android:paddingBottom="@dimen/_2sdp"
        android:background="#F6F6F6"
        android:gravity="start"
        android:text="@string/input_report"
        android:textSize="@dimen/_15sdp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_weight="14"
        android:id="@+id/svQuesResp"
        android:scrollbars="none"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_2sdp"
            android:paddingStart="@dimen/_4sdp"
            android:paddingEnd="@dimen/_4sdp"
            android:background="@drawable/border"
            android:layout_marginLeft="@dimen/_2sdp"
            android:id="@+id/rvQuestionnaireResp"
            android:orientation="vertical"/>
    </ScrollView>
    <!--<androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="14"
        android:layout_marginRight="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:background="#F8F8F8"
        android:layout_marginLeft="@dimen/_2sdp"
        tools:listitem="@layout/inner_view_questionnaire"
        android:id="@+id/rvQuesResp"/>-->
</LinearLayout>