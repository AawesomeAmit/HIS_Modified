<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.his.android.Fragment.IORange">
    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:background="#E6E6E6"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:textColor="@color/blue_text"
            android:id="@+id/txtSubDept"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:text="@string/tab_input_range"
            android:textSize="@dimen/_15sdp"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            android:layout_height="@dimen/_30sdp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_2sdp"
        android:layout_marginEnd="@dimen/_2sdp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/edt_bor"
                android:layout_marginEnd="@dimen/_1sdp"
                android:layout_weight="4"
                android:gravity="center_vertical">
                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                    android:id="@+id/spnType"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_3sdp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/edt_bor"
                android:layout_weight="6"
                android:gravity="center_vertical">
                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                    android:id="@+id/spnDiagnosis"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_3sdp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal">
            <EditText
                android:layout_width="0dp"
                android:layout_weight="3"
                android:textColor="@color/black"
                android:id="@+id/edtMin"
                android:hint="@string/min"
                android:inputType="number|numberDecimal"
                android:paddingStart="@dimen/_4sdp"
                android:background="@drawable/edt_bor"
                android:paddingEnd="@dimen/_4sdp"
                android:gravity="center_vertical"
                android:textSize="@dimen/_10sdp"
                android:layout_height="@dimen/_30sdp"/>
            <EditText
                android:layout_width="0dp"
                android:layout_weight="3"
                android:textColor="@color/black"
                android:id="@+id/edtMax"
                android:hint="@string/max"
                android:inputType="number|numberDecimal"
                android:layout_marginStart="@dimen/_1sdp"
                android:layout_marginEnd="@dimen/_1sdp"
                android:background="@drawable/edt_bor"
                android:paddingStart="@dimen/_4sdp"
                android:paddingEnd="@dimen/_4sdp"
                android:gravity="center_vertical"
                android:textSize="@dimen/_10sdp"
                android:layout_height="@dimen/_30sdp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/edt_bor"
            android:layout_weight="4"
            android:gravity="center_vertical">
            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/spnUnit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_3sdp" />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/_5sdp"
        android:gravity="end">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:paddingTop="@dimen/_5sdp"
            android:textSize="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:textColor="@color/white"
            android:layout_gravity="end"
            android:gravity="center"
            android:background="@drawable/btn_medication"
            android:id="@+id/btnSave" />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="#F8F8F8"
        android:layout_marginLeft="@dimen/_2sdp"
        tools:listitem="@layout/inner_patient_range"
        android:id="@+id/rvPRange"/>

</LinearLayout>