<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_89sdp"
            android:contentDescription="@string/head"
            android:scaleType="fitXY"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/other"
            android:padding="@dimen/_2sdp"
            android:textSize="@dimen/_20sdp"
            android:id="@+id/imgHead"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignEnd="@id/imgHead"
            android:layout_alignStart="@id/imgHead"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_60sdp"
            android:id="@+id/txtHead"
            android:layout_above="@id/imgHead"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="@dimen/_10sdp"
            android:layout_alignTop="@id/imgHead"
            android:layout_alignBottom="@id/imgHead"
            android:text="@string/calculator"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>