<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:weightSum="31.5"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_weight="7.5"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="@dimen/_11sdp"
                android:id="@+id/txtMedName"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/_11sdp"
                android:id="@+id/txtDoseForm"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_weight="2"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_2sdp"
                android:textSize="@dimen/_11sdp"
                android:id="@+id/txtDuration"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/_11sdp"
                android:id="@+id/txtStr"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_weight="5"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/_11sdp"
                android:id="@+id/txtNumDays"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_weight="4"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/_11sdp"
                android:id="@+id/txtRemark"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_weight="1.5"
                android:layout_marginStart="@dimen/_1sdp"
                android:layout_marginEnd="@dimen/_1sdp"
                android:gravity="center"
                android:foregroundGravity="center"
                android:layout_gravity="center"
                android:drawableStart="@drawable/ic_edit_pres"
                android:id="@+id/txtEdit"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_weight="1.5"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginStart="@dimen/_2sdp"
                android:foregroundGravity="center"
                android:layout_gravity="center"
                android:drawableStart="@drawable/ic_remove_pres"
                android:id="@+id/txtAction"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_weight="1.5"
                android:layout_marginStart="@dimen/_1sdp"
                android:layout_marginEnd="@dimen/_1sdp"
                android:gravity="center"
                android:foregroundGravity="center"
                android:layout_gravity="center"
                android:drawableStart="@drawable/ic_stop"
                android:id="@+id/txtStop"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_weight="1.5"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginStart="@dimen/_2sdp"
                android:foregroundGravity="center"
                android:layout_gravity="center"
                android:drawableStart="@drawable/ic_delete"
                android:id="@+id/txtDelete"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>