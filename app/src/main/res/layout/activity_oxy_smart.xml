<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gridviewbg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:orientation="vertical" >

                        <TextView
                            style="@style/realplay_info"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="@string/const_spo2_text" />

                        <TextView
                            style="@style/realplay_info"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="@string/const_spo2_unit_text" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/realplay_spo2_spo2"
                        style="@style/realplay_data_big"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="@color/data_spo2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/blueState"
                        style="@style/realplay_info"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/realplay_spo2_battery"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="invisible" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:orientation="vertical" >

                        <TextView
                            style="@style/realplay_info"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="@string/const_pr_text" />

                        <TextView
                            style="@style/realplay_info"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="@string/const_pr_unit_text" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/realplay_spo2_pr"
                        style="@style/realplay_data_big"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="@color/data_pr" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical" >

                        <TextView
                            style="@style/realplay_info"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="@string/const_pi_text" />

                        <TextView
                            style="@style/realplay_info"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="@string/const_spo2_unit_text" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/realplay_spo2_pi"
                        style="@style/realplay_data_small"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="@color/data_temp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


        <!--     <TextView
                        android:id="@+id/tv_version"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="=="
                        android:textColor="#0000FF"
                        android:textSize="14dp"
                        android:minLines="3"
                        android:scrollHorizontally="true"
                        android:scrollbars="vertical" />  -->

        <TextView
            android:id="@+id/tv_workStatus"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            />
        <!-- android:background="#00CED1" -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_version"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="=="
                android:textColor="#0000FF"
                android:textSize="14dp"
                android:minLines="3"
                android:scrollHorizontally="true"
                android:scrollbars="vertical" />

            <TextView
                android:id="@+id/tv_IR_LightLevel"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:text="=="
                android:textColor="#8A2BE2"
                android:textSize="14dp"
                android:minLines="3"
                android:scrollHorizontally="true"
                android:scrollbars="vertical" />

            <TextView
                android:id="@+id/tv_RED_LightLevel"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:text="=="
                android:textColor="#DC143C"
                android:textSize="14dp"
                android:minLines="3"
                android:scrollHorizontally="true"
                android:scrollbars="vertical" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal" >

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="9" >

                <com.his.android.Activity.OxySmart.BackGround
                    android:id="@+id/realplay_spo2_draw_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


                <com.his.android.Activity.OxySmart.DrawThreadNW
                    android:id="@+id/realplay_spo2_draw_wave"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </FrameLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/realplay_spo2_pulse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/mainheart_ok"
                    android:visibility="invisible" />

                <com.his.android.Activity.OxySmart.DrawPC300SPO2Rect
                    android:id="@+id/realplay_spo2_draw_rect"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/realplay_spo2_pulse"
                    android:layout_marginTop="10dp" >
                </com.his.android.Activity.OxySmart.DrawPC300SPO2Rect>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="10dp" >

            <LinearLayout
                android:id="@+id/playback_info_layout_spo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btnConn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/connect" />

                <Button
                    android:id="@+id/btnDiscon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/disconnect" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>