<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/gryText"
    app:cardElevation="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_2sdp">
    <LinearLayout
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_2sdp"
        android:layout_marginStart="@dimen/_2sdp"
        android:id="@+id/lLayout"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:paddingStart="@dimen/_2sdp"
                android:paddingTop="@dimen/_2sdp"
                android:paddingEnd="@dimen/_2sdp"
                android:paddingBottom="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:text="@string/intake_date_time"
                android:textColor="@color/blue_text"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivClose"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="@dimen/_2sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_close" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginTop="@dimen/_3sdp"
            android:background="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/tvHeading" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="@dimen/_4sdp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtDate"
                android:layout_width="0dp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_1sdp"
                android:layout_marginEnd="@dimen/_2sdp"
                android:layout_weight="1"
                android:background="@drawable/edt_bor"
                android:drawableEnd="@drawable/ic_date1"
                android:gravity="center"
                android:paddingStart="@dimen/_2sdp"
                android:paddingTop="@dimen/_1sdp"
                android:paddingEnd="@dimen/_2sdp"
                android:paddingBottom="@dimen/_1sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_8ssp" />

            <TextView
                android:id="@+id/txtTime"
                android:layout_width="0dp"
                android:layout_height="@dimen/_20sdp"
                android:layout_weight="1"
                android:background="@drawable/edt_bor"
                android:drawableEnd="@drawable/ic_time1"
                android:gravity="center"
                android:layout_marginEnd="@dimen/_2sdp"
                android:layout_marginStart="@dimen/_1sdp"
                android:paddingStart="@dimen/_2sdp"
                android:paddingTop="@dimen/_1sdp"
                android:paddingEnd="@dimen/_2sdp"
                android:paddingBottom="@dimen/_1sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_8ssp"
                android:textStyle="normal" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingTop="@dimen/_10sdp"
            android:id="@+id/lLayout"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtSubmit"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_18sdp"
                android:layout_marginEnd="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/btn_activity1"
                android:drawablePadding="@dimen/_1sdp"
                android:gravity="center"
                android:layout_marginBottom="@dimen/_5sdp"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:paddingTop="@dimen/_2sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:text="@string/submit"
                android:textColor="@color/white"
                android:singleLine="true"
                android:textSize="@dimen/_9ssp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
