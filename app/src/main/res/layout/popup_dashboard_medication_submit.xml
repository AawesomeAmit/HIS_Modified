<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/gryText"
    app:cardElevation="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_2sdp">
    <LinearLayout
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        android:id="@+id/lLayout"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_1sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:text="@string/input_intake"
            android:paddingStart="@dimen/_2sdp"
            android:paddingTop="@dimen/_2sdp"
            android:paddingEnd="@dimen/_2sdp"
            android:paddingBottom="@dimen/_1sdp"
            android:textStyle="bold"
            android:textColor="@color/blue_text"
            android:textSize="@dimen/_10ssp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtDate"
                android:layout_width="0dp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_1sdp"
                android:layout_marginEnd="@dimen/_2sdp"
                android:layout_weight="1"
                android:background="@drawable/edt_bor"
                android:drawableEnd="@drawable/ic_date1"
                android:gravity="center"
                android:paddingStart="@dimen/_2sdp"
                android:paddingTop="@dimen/_1sdp"
                android:paddingEnd="@dimen/_2sdp"
                android:paddingBottom="@dimen/_1sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_8ssp" />

            <TextView
                android:id="@+id/txtTime"
                android:layout_width="0dp"
                android:layout_height="@dimen/_20sdp"
                android:layout_weight="1"
                android:background="@drawable/edt_bor"
                android:drawableEnd="@drawable/ic_time1"
                android:gravity="center"
                android:layout_marginEnd="@dimen/_2sdp"
                android:layout_marginStart="@dimen/_1sdp"
                android:paddingStart="@dimen/_2sdp"
                android:paddingTop="@dimen/_1sdp"
                android:paddingEnd="@dimen/_2sdp"
                android:paddingBottom="@dimen/_1sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_8ssp"
                android:textStyle="normal" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingTop="@dimen/_10sdp"
            android:id="@+id/lLayout"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtSubmit"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_22sdp"
                android:layout_marginEnd="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/btn_activity1"
                android:drawablePadding="@dimen/_1sdp"
                android:gravity="center"
                android:layout_marginBottom="@dimen/_5sdp"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:paddingTop="@dimen/_2sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:text="@string/submit"
                android:textColor="@color/white"
                android:singleLine="true"
                android:textSize="@dimen/_9ssp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
