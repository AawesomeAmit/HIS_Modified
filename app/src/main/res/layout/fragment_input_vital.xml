<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Fragment.InputVital">
    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:background="#E6E6E6"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:textColor="@color/blue_text"
            android:id="@+id/txtSubDept"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:text="@string/vital"
            android:textSize="@dimen/_15sdp"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            android:layout_height="@dimen/_30sdp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_alignParentEnd="true">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:id="@+id/txtDate"
                android:paddingStart="@dimen/_2sdp"
                android:paddingEnd="@dimen/_2sdp"
                android:gravity="center_vertical"
                android:background="@color/blue_heading"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                android:layout_height="@dimen/_30sdp"/>
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:id="@+id/txtTime"
                android:background="@color/blue_heading"
                android:layout_marginStart="@dimen/_2sdp"
                android:paddingStart="@dimen/_2sdp"
                android:paddingEnd="@dimen/_2sdp"
                android:gravity="center_vertical"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                android:layout_height="@dimen/_30sdp"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:layout_marginStart="@dimen/_2sdp"
        android:layout_marginEnd="@dimen/_2sdp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_marginEnd="@dimen/_1sdp"
            android:background="@drawable/edt_bor"
            android:layout_height="@dimen/_30sdp">
            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/spnVital"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_3sdp" />
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:layout_weight="3.25"
            android:background="@drawable/edt_bor"
            android:text="@string/dash"
            android:id="@+id/txtUnit"
            android:textSize="@dimen/_13sdp"
            android:gravity="center"
            android:layout_marginEnd="@dimen/_2sdp"
            android:paddingStart="@dimen/_2sdp"
            android:paddingEnd="@dimen/_2sdp"
            android:drawablePadding="@dimen/_2sdp"
            android:layout_gravity="center_vertical" />
        <EditText
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="1.75"
            android:background="@drawable/edt_bor"
            android:paddingStart="@dimen/_2sdp"
            android:inputType="number|numberDecimal"
            android:layout_marginStart="@dimen/_1sdp"
            android:layout_marginEnd="@dimen/_1sdp"
            android:paddingEnd="@dimen/_2sdp"
            android:textColor="@color/black"
            android:drawableStart="@drawable/ic_med"
            android:drawablePadding="@dimen/_2sdp"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/_13sdp"
            android:id="@+id/edtQty"/>
        <!--<ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/btnAdd"
            android:paddingStart="@dimen/_2sdp"
            android:paddingEnd="@dimen/_2sdp"
            android:maxLength="2"
            android:src="@drawable/ic_add"
            android:layout_gravity="center_vertical"/>-->
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="vertical">
        <!--<android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4.3"
            android:layout_marginRight="@dimen/_5sdp"
            android:background="#F8F8F8"
            android:layout_marginLeft="@dimen/_5sdp"
            tools:listitem="@layout/inner_vital_input"
            android:id="@+id/rvAddVital"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/gryText"/>-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/vital_history_chart"
            android:layout_marginTop="@dimen/_5sdp"
            android:paddingTop="@dimen/_5sdp"
            android:textSize="@dimen/_13sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:textStyle="bold"
            android:textColor="@color/blue_text"
            android:layout_gravity="end"
            android:gravity="start"
            android:background="@color/gryText"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9.3"
            android:layout_marginRight="@dimen/_5sdp"
            android:background="#F8F8F8"
            android:layout_marginLeft="@dimen/_5sdp"
            tools:listitem="@layout/inner_vital_display"
            android:id="@+id/rvVitalDisplay"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="end"
            android:layout_weight="0.7">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save"
                android:paddingTop="@dimen/_5sdp"
                android:textSize="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:textColor="@color/white"
                android:layout_gravity="end"
                android:gravity="center"
                android:background="@drawable/btn_medication"
                android:id="@+id/btnSave" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>