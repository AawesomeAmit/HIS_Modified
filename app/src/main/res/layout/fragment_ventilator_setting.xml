<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.VentilatorSetting">
    <TextView
        android:layout_width="match_parent"
        android:textColor="@color/blue_text"
        android:id="@+id/txtSubDept"
        android:background="#E6E6E6"
        android:paddingStart="@dimen/_5sdp"
        android:paddingEnd="@dimen/_5sdp"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:text="Ventilator Setting"
        android:textSize="@dimen/_15sdp"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:layout_height="@dimen/_30sdp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginStart="@dimen/_1sdp"
        android:layout_marginEnd="@dimen/_1sdp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/_1sdp"
            android:background="@drawable/edt_bor"
            android:layout_height="@dimen/_30sdp">
            <androidx.appcompat.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:paddingStart="@dimen/_2sdp"
                android:paddingEnd="@dimen/_2sdp"
                android:drawablePadding="@dimen/_2sdp"
                android:drawableStart="@drawable/ic_frequency"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/_13sdp"
                android:id="@+id/spnVentilator"/>
        </LinearLayout>
        <EditText
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="1"
            android:background="@drawable/edt_bor"
            android:paddingStart="@dimen/_2sdp"
            android:inputType="number|numberDecimal"
            android:hint="Pressure"
            android:layout_marginStart="@dimen/_1sdp"
            android:paddingEnd="@dimen/_2sdp"
            android:textColor="@color/black"
            android:drawableStart="@drawable/ic_med"
            android:drawablePadding="@dimen/_2sdp"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/_13sdp"
            android:id="@+id/edtPressure"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginStart="@dimen/_1sdp"
        android:layout_marginEnd="@dimen/_1sdp"
        android:orientation="horizontal">
        <EditText
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="1"
            android:background="@drawable/edt_bor"
            android:paddingStart="@dimen/_2sdp"
            android:inputType="number|numberDecimal"
            android:hint="Volume"
            android:layout_marginStart="@dimen/_1sdp"
            android:paddingEnd="@dimen/_2sdp"
            android:textColor="@color/black"
            android:drawableStart="@drawable/ic_med"
            android:drawablePadding="@dimen/_2sdp"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/_13sdp"
            android:id="@+id/edtVolume"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="1"
            android:background="@drawable/edt_bor"
            android:paddingStart="@dimen/_2sdp"
            android:inputType="number|numberDecimal"
            android:hint="Breath Rate"
            android:layout_marginStart="@dimen/_1sdp"
            android:paddingEnd="@dimen/_2sdp"
            android:textColor="@color/black"
            android:drawableStart="@drawable/ic_med"
            android:drawablePadding="@dimen/_2sdp"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/_13sdp"
            android:id="@+id/edtBreathRate"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_gravity="end|center_vertical"
            android:gravity="end|center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save"
                android:paddingTop="@dimen/_5sdp"
                android:textSize="@dimen/_10sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:textColor="@color/white"
                android:layout_gravity="end"
                android:gravity="center"
                android:background="@drawable/btn_medication"
                android:id="@+id/btnSave" />
        </LinearLayout>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="#F8F8F8"
        android:layout_marginLeft="@dimen/_2sdp"
        tools:listitem="@layout/inflate_ventilator"
        android:id="@+id/rvVentilator"/>
</LinearLayout>