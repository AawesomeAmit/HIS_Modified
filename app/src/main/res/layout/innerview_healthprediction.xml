<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_4sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rltv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textView48"
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Minearals"
                    android:textColor="@color/darkorange"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/mineral"
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView48"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:text="Vitamin A"
                    android:textColor="@color/darkbrown"
                    android:textStyle="bold"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/supplement"
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/textView48"
                    android:text="Status"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textColor="@color/darkorange"
                    android:textSize="@dimen/_10sdp"
                    />
                <TextView
                    android:id="@+id/tvSupplementNam"
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/supplement"
                    android:layout_toEndOf="@+id/mineral"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:text="Deficiency"
                    android:textStyle="bold"
                    android:textColor="@color/darkbrown"
                    android:textSize="@dimen/_12sdp" />

            </RelativeLayout>
            <LinearLayout
                android:id="@+id/rltv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/backgroundcolormedium"
                android:layout_below="@+id/rltv1"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/backgroundcolormedium"
                    android:layout_below="@+id/rltv1"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:text="Symptoms"
                        android:textColor="@color/texthintcolor"
                        android:textSize="@dimen/_10sdp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/backgroundcolormedium"
                    android:layout_below="@+id/rltv1"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/symptom"
                        android:layout_marginTop="0dp"
                        android:text="Weakness,fever,pain,vomating etc."
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>