<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.his.android.Fragment.ObservationGraph">
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textSize="@dimen/_10sdp"
                android:id="@+id/date"
                android:textStyle="bold"
                android:text="@string/record_date"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@id/date"
                android:textSize="@dimen/_10sdp"
                android:id="@+id/txtDate"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_investigation"
                android:paddingTop="@dimen/_2sdp"
                android:textSize="@dimen/_10sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:textColor="@color/white"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:gravity="end"
                android:background="@drawable/btn_investigation"
                android:id="@+id/btnAdd"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_5sdp"
            android:background="@color/white"
            android:padding="@dimen/_5sdp"
            android:weightSum="10"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:drawablePadding="@dimen/_2sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_weight="5"
                android:gravity="start"
                android:text="@string/test_name"
                android:textStyle="bold"
                android:textSize="@dimen/_10sdp"
                android:id="@+id/txtTestName"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_weight="4"
                android:drawablePadding="@dimen/_2sdp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="@string/remark"
                android:textSize="@dimen/_10sdp"
                android:id="@+id/txtComment"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:gravity="end"
                android:layout_marginEnd="@dimen/_5sdp"
                android:drawablePadding="@dimen/_2sdp"
                android:textStyle="bold"
                android:text="@string/action"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="10"
            android:orientation="vertical">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="9"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="#F8F8F8"
                android:layout_marginLeft="@dimen/_5sdp"
                tools:listitem="@layout/inner_investigation_list"
                android:id="@+id/rvAddInvestigation"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="end"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/save"
                    android:paddingTop="@dimen/_5sdp"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:textColor="@color/white"
                    android:layout_gravity="end"
                    android:gravity="center"
                    android:background="@drawable/btn_medication"
                    android:id="@+id/btnSave" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>