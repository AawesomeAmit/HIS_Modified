<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.his.android.Fragment.PatientInput">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F1F1F1"
        android:weightSum="4">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_weight="1"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:orientation="horizontal"
            android:background="@drawable/edt_bor"
            android:weightSum="7"
            android:id="@+id/imgProb"
            android:src="@mipmap/problem"
            android:contentDescription="@string/tab_problem">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:src="@mipmap/ic_problem"
                android:contentDescription="@string/tab_problem"
                tools:ignore="NestedWeights" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:gravity="start"
                android:layout_marginStart="@dimen/_13sdp"
                android:textColor="#aebfc7"
                android:textStyle="bold"
                android:textSize="@dimen/_25sdp"
                android:text="@string/tab_problem"
                android:contentDescription="@string/tab_problem"
                tools:ignore="NestedWeights" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:textColor="#aebfc7"
                    android:textSize="@dimen/_12sdp"
                    android:text="@string/related_to_specific_body_part"
                    android:contentDescription="@string/tab_problem"
                    tools:ignore="NestedWeights" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_weight="1"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:background="@drawable/edt_bor"
            android:orientation="horizontal"
            android:weightSum="7"
            android:id="@+id/imgMove"
            android:src="@mipmap/problem"
            android:contentDescription="@string/tab_problem">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:orientation="vertical"
                tools:ignore="NestedWeights">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:gravity="start"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:textColor="#aebfc7"
                    android:textStyle="bold"
                    android:textSize="@dimen/_25sdp"
                    android:text="@string/movement"
                    android:contentDescription="@string/tab_problem"
                    tools:ignore="NestedWeights" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:textColor="#aebfc7"
                    android:textSize="@dimen/_12sdp"
                    android:text="@string/specify_the_movement_noticed_in_specific_body_part"
                    android:contentDescription="@string/tab_problem"
                    tools:ignore="NestedWeights" />
            </LinearLayout>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:layout_gravity="center"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:src="@mipmap/ic_movement"
                android:contentDescription="@string/tab_problem"
                tools:ignore="NestedWeights" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_weight="1"
            android:background="@drawable/edt_bor"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:orientation="horizontal"
            android:weightSum="7"
            android:id="@+id/imgIntake"
            android:src="@mipmap/problem"
            android:contentDescription="@string/tab_problem">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:layout_gravity="center"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:src="@mipmap/ic_intake"
                android:contentDescription="@string/tab_problem"
                tools:ignore="NestedWeights" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:gravity="start"
                    android:textColor="#aebfc7"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:textStyle="bold"
                    android:textSize="@dimen/_25sdp"
                    android:text="@string/intake"
                    android:contentDescription="@string/tab_problem"
                    tools:ignore="NestedWeights" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textColor="#aebfc7"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:textSize="@dimen/_12sdp"
                    android:text="@string/specify_any_type_of_food_supplement_provided"
                    android:contentDescription="@string/tab_problem"
                    tools:ignore="NestedWeights" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_weight="1"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:orientation="horizontal"
            android:background="@drawable/edt_bor"
            android:weightSum="7"
            android:id="@+id/imgOutput"
            android:src="@mipmap/problem"
            android:contentDescription="@string/tab_problem">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:orientation="vertical"
                tools:ignore="NestedWeights">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:gravity="start"
                    android:textColor="#aebfc7"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:textSize="@dimen/_25sdp"
                    android:text="@string/output"
                    android:contentDescription="@string/tab_problem"
                    tools:ignore="NestedWeights" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textColor="#aebfc7"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:textSize="@dimen/_12sdp"
                    android:text="@string/specify_the_amount_and_details_about_output_collected"
                    android:contentDescription="@string/tab_problem"
                    tools:ignore="NestedWeights" />
            </LinearLayout>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:layout_gravity="center"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:src="@mipmap/ic_output"
                android:contentDescription="@string/tab_problem"
                tools:ignore="NestedWeights" />
        </LinearLayout>
    </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>