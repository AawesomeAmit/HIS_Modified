<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_4sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rltv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/nutrient"
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:text="Copper"
                    android:textColor="@color/darkbrown"
                    android:textStyle="bold"
                    android:textSize="@dimen/_11sdp" />

                <TextView
                    android:id="@+id/tvSupplementNam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/supplement"
                    android:layout_alignParentEnd="true"
                    android:gravity="right"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_toEndOf="@+id/nutrient"
                    android:text="Copper Supplement"
                    android:textColor="@color/darkbrown"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold" />

            </RelativeLayout>
            <LinearLayout
                android:id="@+id/rltv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/backgroundcolormedium"
                android:layout_below="@+id/rltv1"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/backgroundcolormedium"
                    android:layout_below="@+id/rltv1"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="0dp"
                        android:text="Achieved"
                        android:textColor="@color/texthintcolor"
                        android:textSize="@dimen/_10sdp"
                        />

                    <TextView
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="0dp"
                        android:text="RDA"
                        android:textColor="@color/texthintcolor"
                        android:textSize="@dimen/_10sdp" />
                    <TextView
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="0dp"
                        android:text="Recommended"
                        android:textColor="@color/texthintcolor"
                        android:textSize="@dimen/_10sdp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/backgroundcolormedium"
                    android:layout_below="@+id/rltv1"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/ach"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="0dp"
                        android:text="0.33306mg"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp"
                        />
                    <TextView
                        android:id="@+id/rda"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="0dp"
                        android:text="1.33306mg"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp"
                        />
                    <TextView
                        android:id="@+id/recommended"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="0dp"
                        android:text="1.0194mg"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>