<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6E6"
    android:weightSum="17"
    android:orientation="vertical"
    tools:context=".Activity.PreDashboard">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1.2"
        android:background="@color/white"
        android:layout_height="0dp">
        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:foregroundGravity="left"
            android:gravity="center"
            android:alpha="0.5"
            android:paddingStart="@dimen/_15sdp"
            android:id="@+id/txtLogout"
            android:paddingEnd="@dimen/_15sdp"
            android:background="#E7E7E7"
            android:paddingTop="@dimen/_13sdp"
            android:paddingBottom="@dimen/_11sdp"
            android:drawableTop="@drawable/ic_logout"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="@dimen/_12sdp"
            android:text="@string/logout"
            android:layout_alignParentStart="true" />-->
        <ImageView
            android:id="@+id/imgNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/view_notification"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="18dp"
            android:background="@drawable/ic_notifications" />
        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foregroundGravity="left"
            android:layout_marginStart="@dimen/_minus6sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:padding="@dimen/_1sdp"
            android:paddingStart="@dimen/_3sdp"
            android:paddingEnd="@dimen/_3sdp"
            style="@style/Widget.Design.FloatingActionButton"
            android:textSize="@dimen/_7sdp"
            android:gravity="start"
            android:layout_toEndOf="@id/imgNotification"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:gravity="center_vertical"
            android:layout_toStartOf="@id/btnOxi"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:foregroundGravity="center"
            android:textSize="@dimen/_12sdp"
            android:visibility="gone"
            android:textColor="@color/black"
            android:drawablePadding="@dimen/_2sdp"
            android:background="@drawable/ic_bp_chart"
            android:id="@+id/btnBp"/>
        <TextView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:gravity="center_vertical"
            android:layout_toStartOf="@id/txtScan"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:foregroundGravity="center"
            android:textSize="@dimen/_12sdp"
            android:visibility="gone"
            android:textColor="@color/black"
            android:drawablePadding="@dimen/_2sdp"
            android:background="@drawable/ic_bluetooth_oxi"
            android:id="@+id/btnOxi"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_toStartOf="@id/ll"
            android:paddingTop="@dimen/_7sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:foregroundGravity="center"
            android:textSize="@dimen/_12sdp"
            android:text="Scan"
            android:visibility="gone"
            android:textColor="@color/black"
            android:drawablePadding="@dimen/_2sdp"
            android:drawableStart="@drawable/ic_qr_scanner"
            android:id="@+id/txtScan"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_toStartOf="@id/ll"
            android:paddingTop="@dimen/_7sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:foregroundGravity="center"
            android:textSize="@dimen/_12sdp"
            android:visibility="gone"
            android:text="@string/covid_registration"
            android:textColor="@color/black"
            android:drawablePadding="@dimen/_2sdp"
            android:drawableStart="@drawable/ic_covid_patient"
            android:id="@+id/txtCovidRegistration"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_toStartOf="@id/img"
            android:foregroundGravity="right"
            android:paddingTop="@dimen/_12sdp"
            android:id="@+id/ll"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#10207A"
                android:id="@+id/txtDrName"
                android:textSize="@dimen/_8sdp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textStyle="bold"
                android:id="@+id/txtDept"
                android:visibility="gone"
                android:textColor="#AC4444"
                android:textSize="@dimen/_7sdp"/>
        </LinearLayout>
        <TextView
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_28sdp"
            android:id="@+id/img"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:background="@drawable/user"
            android:textSize="@dimen/_8sdp"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/rvGrid"
        android:layout_weight="9.2"
        tools:listitem="@layout/card_layout_head"
        android:columnCount="4"
        android:layout_height="0dp"/>
    <!--<ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:contentDescription="@string/logo"
        app:srcCompat="@drawable/logo"
        android:layout_weight="6"/>-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6">

        <TextView
            android:id="@+id/txtScans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/rectangle_orange"
            android:drawableStart="@drawable/ic_qr_scanner"
            android:drawableLeft="@drawable/ic_qr_scanner"
            android:drawablePadding="@dimen/_10sdp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:text="Scan PID"
            android:textColor="@color/white"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtBp"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/rectangle_bp"
            android:drawableBottom="@drawable/ic_bp_chart2"
            android:gravity="center"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_15sdp"
            android:text="Connect BP\nMachine"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/txtSpo2"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtScans" />

        <TextView
            android:id="@+id/txtSpo2"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/rectangle_orange"
            android:drawableBottom="@drawable/ic_spo2"
            android:gravity="center"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_15sdp"
            android:text="Connect Spo2\nMachine"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@+id/txtBp"
            app:layout_constraintTop_toBottomOf="@+id/txtScans" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>