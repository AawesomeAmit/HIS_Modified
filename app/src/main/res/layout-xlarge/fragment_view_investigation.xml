<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#FCFCFC"
    android:layout_height="match_parent"
    tools:context=".Fragment.ViewInvestigation">
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@color/white"
        android:layout_marginEnd="@dimen/_5sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:paddingTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textSize="@dimen/_10sdp"
            android:id="@+id/inv"
            android:textColor="@color/blue_text"
            android:textStyle="bold"
            android:text="@string/investigation"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/inv"
            android:textSize="@dimen/_10sdp"
            android:id="@+id/txtDate"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_investigation"
            android:paddingTop="@dimen/_4sdp"
            android:textSize="@dimen/_10sdp"
            android:paddingBottom="@dimen/_4sdp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:textColor="@color/white"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:gravity="end"
            android:background="@drawable/btn_investigation"
            android:id="@+id/btnAddInvestigation"/>
    </RelativeLayout>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:textSize="@dimen/_22sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:popupBackground="@color/white"
        android:id="@+id/spnBill"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:paddingTop="@dimen/_2sdp"
        android:paddingBottom="@dimen/_2sdp"
        android:paddingStart="@dimen/_2sdp"
        android:paddingEnd="@dimen/_2sdp"
        android:background="#F6F6F6"
        android:weightSum="10"
        android:layout_marginBottom="@dimen/_1sdp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/blue_text"
            android:drawablePadding="@dimen/_2sdp"
            android:gravity="start"
            android:layout_weight="5"
            android:text="@string/test"
            android:textSize="@dimen/_9sdp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_2sdp"
            android:paddingEnd="@dimen/_2sdp"
            android:gravity="start"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_weight="2"
            android:text="@string/value"
            android:textStyle="bold"
            android:drawablePadding="@dimen/_2sdp"
            android:textColor="@color/blue_text"
            android:textSize="@dimen/_9sdp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_2sdp"
            android:paddingEnd="@dimen/_2sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:textStyle="bold"
            android:gravity="end"
            android:layout_weight="3"
            android:text="@string/range"
            android:drawablePadding="@dimen/_2sdp"
            android:textColor="@color/blue_text"
            android:textSize="@dimen/_9sdp"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F8F8F8"
        tools:listitem="@layout/inner_view_investigation"
        android:id="@+id/rView"/>
</LinearLayout>