<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:weightSum="100"
    android:background="@drawable/bg"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/logo"
        tools:ignore="ContentDescription" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="50"
        android:orientation="vertical"
        android:background="@drawable/w_bg_new"
        android:layout_height="0dp">
        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="fill_parent"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:singleLine="true"
            android:hint="@string/user_id"
            android:textColorHint="#bebdbc"
            android:gravity="center"
            app:backgroundTint="#ffffff"
            android:textSize="@dimen/_10sdp"
            android:background="@drawable/edt_bor"
            android:layout_marginRight="@dimen/_50sdp"
            android:layout_marginLeft="@dimen/_50sdp"
            android:textColor="#000000"
            android:id="@+id/edtUser"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="fill_parent"
            android:layout_height="@dimen/_20sdp"
            android:textColor="#000000"
            android:layout_marginRight="@dimen/_50sdp"
            android:layout_marginLeft="@dimen/_50sdp"
            android:textStyle="italic"
            android:hint="@string/password"
            android:textSize="@dimen/_10sdp"
            android:gravity="center"
            android:textColorHint="#bebdbc"
            android:background="@drawable/edt_bor"
            app:backgroundTint="#ffffff"
            android:singleLine="true"
            android:inputType="textPassword"
            android:layout_marginTop="@dimen/_15sdp"
            android:id="@+id/edtPwd"/>
        <TextView
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_22sdp"
            android:text="@string/sign_in"
            android:id="@+id/btnLogin"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/btn_bg"
            android:textSize="@dimen/_10sdp"
            android:gravity="center"
            android:textColor="#0C2AD1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/forget_password"
            android:textSize="@dimen/_10sdp"
            android:id="@+id/txtForget"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:textColor="#0C2AD1"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="#D3D3D3"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:textSize="@dimen/_8sdp"
            android:text="@string/we_respect_your_privacy"
            android:gravity="center"
            android:textColor="#4E4E4E"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_8sdp"
            android:text="@string/we_hate_spam_as_much_as_you_do"
            android:gravity="center"
            android:textColor="#4E4E4E"/>
    </LinearLayout>
</LinearLayout>