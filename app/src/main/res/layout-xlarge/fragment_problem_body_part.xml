<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.ProblemBodyPart">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="@dimen/_220sdp"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_marginBottom="@dimen/_50sdp"
        android:background="@drawable/edt_bor"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_marginBottom="@dimen/_60sdp"
        android:src="@mipmap/dummy_man"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDateFrom" />

    <ImageView
        android:id="@+id/ivChestClick"
        android:layout_width="@dimen/_65sdp"
        android:layout_height="@dimen/_100sdp"
        android:contentDescription="@string/chest"
        app:layout_constraintBottom_toBottomOf="@+id/ivImage"
        app:layout_constraintEnd_toEndOf="@+id/ivImage"
        app:layout_constraintStart_toStartOf="@+id/ivImage"
        app:layout_constraintTop_toBottomOf="@+id/ivHeadClick"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/ivAbdomenClick"
        android:layout_width="@dimen/_65sdp"
        android:layout_height="@dimen/_80sdp"
        android:contentDescription="@string/abdomen"
        app:layout_constraintBottom_toBottomOf="@+id/ivImage"
        app:layout_constraintEnd_toEndOf="@+id/ivImage"
        app:layout_constraintStart_toStartOf="@+id/ivImage"
        app:layout_constraintTop_toBottomOf="@+id/ivChestClick"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/ivLegClickRight"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_185sdp"
        android:layout_marginStart="@dimen/_60sdp"
        android:contentDescription="@string/right_leg"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/ivAbdomenClick" />

    <ImageView
        android:id="@+id/ivLegClickLeft"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_185sdp"
        android:layout_marginEnd="@dimen/_60sdp"
        android:contentDescription="@string/left_leg"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/ivAbdomenClick" />

    <ImageView
        android:id="@+id/ivHeadClick"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_55sdp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/head"
        app:layout_constraintEnd_toEndOf="@+id/ivImage"
        app:layout_constraintStart_toStartOf="@+id/ivImage"
        app:layout_constraintTop_toTopOf="@+id/ivImage"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/ivHandClickRight"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_170sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:contentDescription="@string/right_hand"
        app:layout_constraintBottom_toBottomOf="@+id/ivImage"
        app:layout_constraintEnd_toStartOf="@+id/ivChestClick"
        app:layout_constraintTop_toBottomOf="@+id/ivHeadClick"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/ivHandClickLeft"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_170sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:contentDescription="@string/left_hand"
        app:layout_constraintBottom_toBottomOf="@+id/ivImage"
        app:layout_constraintStart_toEndOf="@+id/ivChestClick"
        app:layout_constraintTop_toBottomOf="@+id/ivHeadClick"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvSelectBodyPart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:lineSpacingExtra="-3dp"
        android:padding="2dp"
        android:text="@string/select_body_part"
        android:textColor="@color/blue_text"
        android:textSize="@dimen/_15sdp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <TextView
        android:id="@+id/tvText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/select_body_part"
        android:textColor="@color/black"
        android:textSize="@dimen/_8sdp"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/tvSelectBodyPart"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="448dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edt_bor"
        android:gravity="center"
        android:paddingTop="@dimen/_2sdp"
        android:paddingBottom="@dimen/_2sdp"
        android:text="@string/from"
        android:textColor="@color/blue_text"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintEnd_toStartOf="@+id/textView4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="449dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edt_bor"
        android:gravity="center"
        android:paddingTop="@dimen/_2sdp"
        android:paddingBottom="@dimen/_2sdp"
        android:text="@string/to"
        android:textColor="@color/blue_text"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtDateFrom"
        android:layout_width="223dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edt_bor"
        android:gravity="end"
        android:paddingEnd="@dimen/_2sdp"
        android:paddingStart="@dimen/_2sdp"
        android:paddingTop="@dimen/_2sdp"
        android:paddingBottom="@dimen/_2sdp"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintEnd_toStartOf="@+id/txtTimeFrom"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/txtTimeFrom"
        android:layout_width="224dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edt_bor"
        android:gravity="center"
        android:paddingTop="@dimen/_2sdp"
        android:paddingBottom="@dimen/_2sdp"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintEnd_toStartOf="@+id/txtDateTo"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/txtDateFrom"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/txtDateTo"
        android:layout_width="224dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edt_bor"
        android:gravity="center"
        android:paddingTop="@dimen/_2sdp"
        android:paddingBottom="@dimen/_2sdp"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintEnd_toStartOf="@+id/txtTimeTo"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/txtTimeFrom"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/txtTimeTo"
        android:layout_width="224dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edt_bor"
        android:gravity="center"
        android:paddingTop="@dimen/_2sdp"
        android:paddingBottom="@dimen/_2sdp"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/txtDateTo"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/txtSkip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/btn_skip"
        android:paddingStart="@dimen/_20sdp"
        android:paddingTop="@dimen/_4sdp"
        android:paddingEnd="@dimen/_20sdp"
        android:paddingBottom="@dimen/_4sdp"
        android:text="@string/skip"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnProceed"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvText" />

    <TextView
        android:id="@+id/btnProceed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/btn_proceed"
        android:paddingStart="@dimen/_40sdp"
        android:paddingTop="@dimen/_4sdp"
        android:paddingEnd="@dimen/_40sdp"
        android:paddingBottom="@dimen/_4sdp"
        android:text="@string/proceed"
        android:textColor="@color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/txtSkip"
        app:layout_constraintTop_toBottomOf="@+id/tvText"
        app:layout_constraintVertical_bias="0.454" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clLeftAnim"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginBottom="@dimen/_25sdp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toStartOf="@+id/imageView4"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewLeft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/inflate_organs" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clRightAnim"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginBottom="@dimen/_25sdp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewRight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/inflate_organs" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>